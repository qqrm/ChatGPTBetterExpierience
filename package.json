{
  "name": "chatgpt-dictation-auto-send",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "node scripts/build.mjs",
    "lint": "eslint .",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "test": "node scripts/test.mjs",
    "verify": "npm run lint && npm run test && npm run build",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,mjs,cjs,json,md,html,css,scss,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "esbuild": "^0.25.0",
    "eslint": "8.57.1",
    "jsdom": "^26.1.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "playwright": "^1.55.0",
    "prettier": "^3.4.2",
    "typescript": "^5.8.0",
    "vitest": "^3.2.4"
  }
}
