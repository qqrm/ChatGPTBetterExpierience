{
  "manifest_version": 3,
  "name": "ChatGPT Dictation Auto-Send",
  "version": "1.0.3",
  "description": "Auto-sends ChatGPT dictation transcripts when you accept them. Hold a configurable modifier key (Shift by default) while clicking the dictation checkmark to skip auto-send.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "Dictation Auto-Send",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "96": "icons/icon96.png",
      "128": "icons/icon128.png",
      "256": "icons/icon256.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "chatgpt-dictation-autosend@qqrm-tools"
    }
  },
  "homepage_url": "https://github.com/qqrm/ChatGPT-Dictation-Auto-Send"
}
